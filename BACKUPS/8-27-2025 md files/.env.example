# SECURITY WARNING: Never commit actual credentials to git
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/pod_database
DATABASE_SSL=true

# Admin Authentication (CHANGE THESE!)
ADMIN_USERNAME=change_this_username
ADMIN_PASSWORD=change_this_secure_password_minimum_12_chars
JWT_SECRET=change_this_to_random_32_char_string_or_longer

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret
SHOPIFY_ACCESS_TOKEN=your_shop_access_token

# Application
NODE_ENV=development
PORT=3001

# Frontend URLs
ADMIN_PANEL_URL=http://localhost:5173
SHOPIFY_APP_URL=http://localhost:3000

# Testing Credentials (for Playwright - NEVER use production creds)
TEST_ADMIN_USERNAME=test_admin
TEST_ADMIN_PASSWORD=test_password_123

# Redis (optional but recommended)
REDIS_URL=redis://localhost:6379

# Image Processing
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100