# =============================================================================
# Environment Configuration - Multi-Marketplace Backend
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
APP_NAME=AgentSmith Marketplace Backend
APP_VERSION=1.0.0

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marketplace_dev
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL=false
DB_LOGGING=false
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/marketplace_dev

# =============================================================================
# Redis Configuration (Caching and Queues)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_URL=redis://:redis123@localhost:6379/0

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# AWS Configuration (S3 Storage)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=marketplace-uploads
AWS_S3_REGION=us-east-1
AWS_S3_ENDPOINT=
AWS_CLOUDFRONT_URL=

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@marketplace.local
EMAIL_FROM_NAME=Marketplace Platform

# =============================================================================
# External API Integrations
# =============================================================================

# Shopify Integration
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
SHOPIFY_SCOPES=read_products,write_products,read_orders
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret

# Etsy Integration  
ETSY_CLIENT_ID=your-etsy-client-id
ETSY_CLIENT_SECRET=your-etsy-client-secret
ETSY_REDIRECT_URI=http://localhost:3001/auth/etsy/callback
ETSY_SCOPES=listings_r listings_w shops_r

# Amazon SP-API Integration
AMAZON_CLIENT_ID=your-amazon-client-id
AMAZON_CLIENT_SECRET=your-amazon-client-secret
AMAZON_REFRESH_TOKEN=your-amazon-refresh-token
AMAZON_REGION=us-east-1
AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIRECTORY=./logs

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DB=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_MEMORY_THRESHOLD=90

# =============================================================================
# Performance & Optimization
# =============================================================================
MAX_MEMORY=1073741824
NODE_OPTIONS=--max-old-space-size=1024 --enable-source-maps

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
MAX_IMAGES_PER_PRODUCT=10

# =============================================================================
# Queue Configuration (Bull)
# =============================================================================
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=redis123
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=app:*
DEVELOPMENT_CORS_ORIGIN=http://localhost:3000
API_DOCS_ENABLED=true

# =============================================================================
# Production Configuration (Only use in production)
# =============================================================================
# FORCE_HTTPS=true
# TRUST_PROXY=true
# SESSION_SECURE=true
# COOKIE_SECURE=true
# HSTS_ENABLED=true

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=marketplace_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres123
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379